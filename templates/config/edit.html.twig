{% extends 'layout.html.twig' %}
{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>Edit Config</h1>
                {{ form_start(form) }}
                {{ form_row(form.name) }}
                {{ form_row(form.description) }}
                <h3>Parameters</h3>
                <div class="config-items" data-prototype="{{ form_widget(form.items.vars.prototype)|e('html_attr') }}">
                    {% for item in form.items %}
                        <div class="form-group">
                            {{ form_row(item.item_key) }}
                            {{ form_row(item.item_value) }}
                        </div>
                    {% endfor %}
                </div>
                <div class="btn-block btn-holder">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a href="{{ path('admin_config_list')  }}" class="btn btn-info">Back to Config List</a>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock content %}