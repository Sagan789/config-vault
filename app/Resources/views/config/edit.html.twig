{% extends 'layout.html.twig' %}

{% block content %}
        <h1>Edit Configuration</h1>
        {% if message %}
            <div class="alert-info">Message {{ message }}</div>
        {% endif %}
        <form role="form" method="POST" action="/config/edit">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{ config.name }}">
            </div>
            <div class="form-group">
                <label for="name">Description</label>
                <input type="text" class="form-control" id="description" name="description" value="{{ config.description }}">
            </div>
            <div id="config_items">
        {% for item in config.items %}
            <div class="form-group">
                <div class="col-lg-6">
                    <label for="name">Key</label>
                    <input type="text" class="form-control" id="item_key_{{ n }}" name="label_entry_1" value="{{ item.ItemKey }}">
                </div>
                <div class="col-lg-6">
                    <label for="name">Value</label>
                    <input type="text" class="form-control" id="item_value_{{ n }}" name="value_entry_1" value="{{ item.ItemValue }}">
                </div>
            </div>

        {% endfor %}
            </div>
            <div id="additional_items"></div>
            <div class="form-group">
                <input type="hidden" id="itemsCount" name="itemsCount" value="{{ items|length }}">
            </div>

            <div class="addmore-block">
                <button type="button" class="btn glyphicon-expand" onclick="addConfigItems(2)">Add More</button>
            </div>
            <div class="center-block text-center">
                <div><a href="/config/list" class="btn btn-default">Cancel</a></div>
                <button type="submit" class="btn btn-info">Save</button>
            </div>
        </form>
    <div class="btn-block text-right">
        <div><a href="/config/list" class="btn btn-info">Back to Config List</a></div>
    </div>
{% endblock content %}